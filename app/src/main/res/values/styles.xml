<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Fundo do dialog -->
        <item name="android:background">#1F1F1F</item>

        <!-- Cor do texto principal (ex: título do mês/ano) -->
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Cor do texto secundário (ex: dias da semana) -->
        <item name="android:textColorSecondary">#BBBBBB</item>

        <!-- Cor dos números dos dias -->
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>

        <!-- Cor dos dias desativados -->
        <item name="android:textColorSecondaryInverse">#555555</item>
    </style>
</resources>